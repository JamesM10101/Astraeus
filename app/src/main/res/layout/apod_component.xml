<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="apod"
            type="com.jamesm10101.astraeus.data.APOD" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtV_APOD_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/apod_header"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_APOD_imgWrapper"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/txtV_APOD_header">

            <ImageView
                android:id="@+id/imgV_APOD"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/apod_image"
                android:scaleType="centerCrop"
                app:imageUrl="@{apod.imgSrcUrl}" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#99000000"
                android:maxHeight="60dp"
                android:padding="5dp">

                <TextView
                    android:id="@+id/txtV_APOD_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:lineSpacingExtra="4sp"
                    android:maxLines="1"
                    android:text="@{apod.title.empty ? `Title` : apod.title}"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtV_APOD_copyright"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lineSpacingExtra="4sp"
                    android:maxLines="2"
                    android:text="@{apod.copyright}"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:visibility="@{apod.copyright.length() == 0 ? View.GONE : View.VISIBLE}"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtV_APOD_title" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>