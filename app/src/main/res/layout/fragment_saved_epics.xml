<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.jamesm10101.astraeus.data.EpicSortType" />

        <variable
            name="viewModel"
            type="com.jamesm10101.astraeus.viewModels.SavedEpicsViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.SavedEpicsFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_resultDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtV_totalPhotos_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/saved_epics_colon"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtV_totalPhotos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{String.valueOf(viewModel.state.epics.size())}"
                    android:layout_marginStart="5dp"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toEndOf="@id/txtV_totalPhotos_label"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@string/placeholder_number" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_sort_filled"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:onClickListener="@{viewModel.sortClick()}"
                    android:text="@{viewModel.state.epicSortType == EpicSortType.ID ? `Recent` : `Date`}"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="ID" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cycV_savedEpics"
                epicGridRecyclerListData="@{viewModel.state.epics}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:importantForAccessibility="no"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/layout_resultDetails"
                app:spanCount="@integer/exploreRecyclerSpan"
                tools:listitem="@layout/epic_grid_recycler_item" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</layout>