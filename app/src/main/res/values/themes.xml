<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Astraeus" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/nasaBlue</item>
        <item name="colorPrimaryVariant">@color/nasaBlueDarkVariant</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/nasaRed</item>
        <item name="colorSecondaryVariant">@color/nasaRedDarkVariant</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="colorOnSurfaceVariant">#000000</item>
    </style>

    <style name="Astraeus.BottomNavBar.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/nasaBlue</item>
    </style>

    <style name="ExploreCardView" parent="@style/Widget.Material3.CardView.Outlined">
        <item name="shapeAppearanceOverlay">@style/Astraeus.ExploreCardView.Outlined</item>
    </style>

    <style name="Astraeus.ExploreCardView.Outlined" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="RoverCamFilterChip" parent="@style/Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/rover_cam_filter_chip_bg_state_list</item>
        <item name="android:textColor">@color/rover_cam_filter_tc_state_list</item>
        <item name="checkedIconTint">@color/offWhite</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <style name="RoverDetailChip" parent="@style/Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="chipIconTint">@color/black</item>
    </style>

</resources>